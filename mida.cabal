    ghc-options:      -O2 -Wall
  default-language:   Haskell2010
  build-depends:      HCodecs                >= 0.5     && < 0.6
                    , QuickCheck             >= 2.8.2   && < 3.0
                    , base                   >= 4.8     && < 5.0
                    , containers             >= 0.5.5.1 && < 0.6
                    , hspec                  >= 2.0     && < 3.0
                    , megaparsec             >= 5.0     && < 6.0
                    , mida                   >= 1.0.2
                    , mtl                    >= 2.1.3.1 && < 3.0
                    , random
                    , text                   >= 1.2.0.4 && < 1.3
                    , tf-random              >= 0.5     && < 1.0
                    , transformers           >= 0.2.0.0 && < 0.6

